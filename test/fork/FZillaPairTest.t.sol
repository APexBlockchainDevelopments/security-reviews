import {Test} from "forge-std/Test.sol";
import {console} from "forge-std/console.sol";
import {ERC20Mock} from "../mocks/ERC20Mock.sol";

contract FZillaPairTest is Test {
    IFZillaFactory ifzillaFactory;
    IFZillaPair ifzillaPair;
    ERC20Mock tokenA;
    ERC20Mock tokenB;

    address user = makeAddr("user");
    

    function setUp() public {
        require(block.chainid == 314, "Not on correct network");
        tokenA = new ERC20Mock();
        tokenB = new ERC20Mock();
        ifzillaFactory = IFZillaFactory(0xD4745e9442c40942F6f4f252b223229160F8dc71);
        
        //Make Pair
        vm.deal(user, 1e18);
        vm.startPrank(user);
        tokenA.mint(user, 1e18);
        tokenB.mint(user, 1e18);
        address pair = ifzillaFactory.createPair(address(tokenA), address(tokenB));
        ifzillaPair = IFZillaPair(pair);
        vm.stopPrank();
    }

    

    //name, symbol, dec, ts, DOMAIN_SEPARATOR, PERMIT_HASH, nonces
    function test_basicInfoPairAtInitialization() public {  //All these tests are done with no liqudity in pool, later on we'll add to the pair and test again
        assertEq(ifzillaPair.name(), "FZilla LPs");
        assertEq(ifzillaPair.symbol(), "FZilla-LP");
        assertEq(ifzillaPair.decimals(), 18);
        assertEq(ifzillaPair.totalSupply(), 0); //Should be zero since we haven't added liquidity yet
        bytes32 domainSeparator = ifzillaPair.DOMAIN_SEPARATOR();
        assertEq(domainSeparator, 0xec51396e988b27c39869c26661a160eec51c091d53c486f3bf064593288db4ac);
        assertEq(ifzillaPair.MINIMUM_LIQUIDITY(), 10**3);
        assertEq(ifzillaPair.factory(), address(ifzillaFactory));
        assertEq(ifzillaPair.token0(), address(tokenB));
        assertEq(ifzillaPair.token1(), address(tokenA));
        (uint112 reserve0, uint112 reserve1, ) = ifzillaPair.getReserves();
        assertEq(reserve0, 0);
        assertEq(reserve1, 0);

    
        // function mint(address to) external returns (uint liquidity);
        // function burn(address to) external returns (uint amount0, uint amount1);
        // function skim(address to) external;

        address tokenC = makeAddr("tokenC");
        address tokenD = makeAddr("tokenD");
        vm.expectRevert('FZilla: FORBIDDEN');
        ifzillaPair.initialize(tokenC, tokenD);
    }


}


